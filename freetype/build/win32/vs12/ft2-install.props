<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets">
    <Import Project="ft2-build-defines.props" />
  </ImportGroup>
  <PropertyGroup Label="UserMacros">
    <BinDir>$(SolutionDir)$(Configuration)\$(Platform)\bin</BinDir>
    <InstalledDlls>$(BinDir)\freetype.dll</InstalledDlls>
    <FT2DoInstall>
mkdir $(CopyDir)

mkdir $(CopyDir)\bin
copy $(InstalledDlls)\freetype.dll $(CopyDir)\bin
copy $(InstalledDlls)\freetype.pdb $(CopyDir)\bin

mkdir $(CopyDir)\lib
copy $(InstalledDlls)\freetype.lib $(CopyDir)\lib

mkdir $(CopyDir)\include
copy ..\..\..\include\*.h $(CopyDir)\include

mkdir $(CopyDir)\include\config
copy ..\ftoption.h $(CopyDir)\include\config
copy ..\..\..\include\config\ftconfig.h $(CopyDir)\include\config
copy ..\..\..\include\config\ftheader.h $(CopyDir)\include\config
copy ..\..\..\include\config\ftmodule.h $(CopyDir)\include\config
copy ..\..\..\include\config\ftstdlib.h $(CopyDir)\include\config

mkdir $(CopyDir)\include\internal\services
copy ..\..\..\include\internal\*.h $(CopyDir)\include\internal
copy ..\..\..\include\internal\services\*.h $(CopyDir)\include\internal\services
</FT2DoInstall>
  </PropertyGroup>
  <PropertyGroup>
    <_PropertySheetDisplayName>ft2installprops</_PropertySheetDisplayName>
  </PropertyGroup>
  <ItemGroup>
    <BuildMacro Include="FT2DoInstall">
      <Value>$(FT2DoInstall)</Value>
    </BuildMacro>
    <BuildMacro Include="BinDir">
      <Value>$(BinDir)</Value>
    </BuildMacro>
    <BuildMacro Include="InstalledDlls">
      <Value>$(InstalledDlls)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>
